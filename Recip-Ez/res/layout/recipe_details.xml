<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_details_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="24sp"
            android:textColor="@color/about_screen_black_text"
            android:text="Title" />
        
        <com.loopj.android.image.SmartImageView
            android:id="@+id/main_image_detail_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/title_details_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/main_logo" />
        
        <TextView
            android:id="@+id/ingredient_title_detail_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_image_detail_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/about_screen_black_text"
            android:text="Ingredients" />
        
        <TextView
            android:id="@+id/ingredients_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ingredient_title_detail_view"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="content of ingredients" />

        
        <TextView
            android:id="@+id/directions_title_detail_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ingredients_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/about_screen_black_text"
            android:text="Directions" />
        
        <TextView
            android:id="@+id/directions_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/directions_title_detail_view"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="content of directions" />



    </RelativeLayout>
    

</ScrollView>
